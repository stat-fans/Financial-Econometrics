set.seed(103)
x <- runif(100, min = -1, max = 1)
y <- 4*x  + rnorm(length(x), sd = 1)
# Data frame
df <- data.frame(x = x, y = y)
library(tidyverse)
myarrow = arrow(angle = 15, ends = "last", type = "closed")
df %>%
ggplot(aes(x = x, y = y)) +
geom_point(colour="red",alpha = 0.5) +
geom_point(aes(x=0, y=0), colour="blue",shape=19)+
ylim(-5.7,5.7)+
geom_segment(aes(x = 0, y = -5.7, xend = 0, yend = 5.7),colour="grey50",arrow = myarrow)+
geom_segment(aes(x = -1.0, y = 0, xend = 1, yend = 0),colour="grey50",arrow = myarrow)+
annotate("text", x = 0.1, y = 5.7, label=expression(x[2]),parse = TRUE,size=6)+
annotate("text", x = 1, y = -0.8, label=expression(x[1]),parse = TRUE,size=6)+
geom_curve(aes(x = 0.5, y = 0, xend = 0.40, yend = 1.6),colour="blue",arrow = myarrow) +
annotate("text", x = 0.55, y = 1.2, label=expression(theta),parse = TRUE,size=6)+
# annotate("text", x = -0.75, y = 4.3, label=expression(tilde(x)[2]),parse = TRUE)+
# geom_hline(yintercept=0) +
# geom_vline(xintercept=0) +
# stat_ellipse(color = 2,
#              linetype = 2,
#              lwd = 1.2)+
# labs(x = expression(x[1]),y= expression(x[2]))+
geom_segment(aes(x = -1, y = -4, xend = 1, yend = 4),colour="blue",linetype="dashed",arrow = myarrow)+
geom_segment(aes(x = 0.25, y = -3, xend = -0.25, yend = 3),colour="blue",linetype="dashed",arrow = myarrow)+
annotate("text", x = 1, y = 3.4, label=expression(tilde(x)[1]),parse = TRUE,size=6)+
annotate("text", x = -0.25, y = 3.4, label=expression(tilde(x)[2]),parse = TRUE,size=6)+
theme(axis.text.x=element_blank(),
axis.ticks.x=element_blank(),
axis.title.x=element_blank(),
axis.text.y=element_blank(),
axis.ticks.y=element_blank(),
axis.title.y=element_blank())
