geom_segment(aes(x = -1, y = -4, xend = 1, yend = 4),colour="blue",linetype="dashed",arrow = myarrow)+
geom_segment(aes(x = 0.25, y = -3, xend = -0.25, yend = 3),colour="blue",linetype="dashed",arrow = myarrow)+
annotate("text", x = 1, y = 3.4, label=expression(tilde(x)[1]),parse = TRUE,size=6)+
annotate("text", x = -0.25, y = 3.4, label=expression(tilde(x)[2]),parse = TRUE,size=6)+
